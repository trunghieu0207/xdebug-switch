{
  "manifest_version": 3,
  "name": "Xdebug Switch",
  "description": "Toggle Xdebug session cookie (XDEBUG_SESSION) on/off",
  "version": "1.0",
  "permissions": [
    "cookies",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
    }
  }
}